{
    "name": "newtovaux/platforminfo",
    "description": "This WordPress plugin gives useful infomation for sites on shared-hosting.",
    "type": "project",
    "license": "GPLv2",
    "autoload": {
        "psr-4": {
            "Newtovaux\\Platforminfo\\": "include/"
        }
    },
    "authors": [
        {
            "name": "newtovaux",
            "email": "newtovaux@gmail.com"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "scripts": {
        "lint-all": [
            "@lint-php"
        ],
        "lint-php": [
            "./vendor/bin/phpcs --config-set installed_paths `pwd`/vendor/wp-coding-standards/wpcs",
            "./vendor/bin/phpcs --standard=WordPress -sv platforminfo.php include/"
        ],
        "build": [
            "rm -f platforminfo.zip",
            "pushd .. && zip -9 'platforminfo/platforminfo.zip' -r platforminfo/ -x 'platforminfo/*.git*' -x 'platforminfo/*.zip' -x 'platforminfo/build.sh' x 'platforminfo/vendor/*' -x 'platforminfo/composer.*' -x 'platforminfo/.wordpress-org/*' -x 'platforminfo/README.md'"
        ]
    }
}
