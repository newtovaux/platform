{
    "editor.tabSize": 4,

    "json.maxItemsComputed": 50000,

    "phpmd.enabled": false,

    "phpcs.enable": true,
    "phpcs.executablePath": "./vendor/bin/phpcs",
    "phpcs.standard": "WordPress",

    "actionButtons": {
        "defaultColor": "white", // Can also use string color names.
        "loadNpmCommands":true, // Disables automatic generation of actions for npm commands.
        "reloadButton":"♻️", // Custom reload button text or icon (default ↻). null value enables automatic reload on configuration change
        "commands": [
            {
                "cwd": "${workspaceFolder}",     // Terminal initial folder ${workspaceFolder} and os user home as defaults
                "name": "Browser",
                "color": "white",
                "singleInstance": true,
                "command": "google-chrome-stable http://localhost/wp-admin/ && exit", // This is executed in the terminal.
            },
            {
                "cwd": "${workspaceFolder}",     // Terminal initial folder ${workspaceFolder} and os user home as defaults
                "name": "Lint",
                "color": "white",
                "singleInstance": true,
                "command": "composer run lint-all", // This is executed in the terminal.
            },
            {
                "cwd": "${workspaceFolder}",     // Terminal initial folder ${workspaceFolder} and os user home as defaults
                "name": "Analyse",
                "color": "white",
                "singleInstance": true,
                "command": "composer run analyse", // This is executed in the terminal.
            },
            {
                "cwd": "${workspaceFolder}",     // Terminal initial folder ${workspaceFolder} and os user home as defaults
                "name": "Build",
                "color": "white",
                "singleInstance": true,
                "command": "composer run build && exit", // This is executed in the terminal.
            },
            {
                "cwd": "${workspaceFolder}",     // Terminal initial folder ${workspaceFolder} and os user home as defaults
                "name": "Deploy",
                "color": "white",
                "singleInstance": true,
                "command": "composer run deploy && exit",
            },
            {
                "cwd": "${workspaceFolder}",     // Terminal initial folder ${workspaceFolder} and os user home as defaults
                "name": "Logs",
                "color": "white",
                "singleInstance": true,
                "command": "composer run logs",
            },
            {
                "cwd": "${workspaceFolder}",     // Terminal initial folder ${workspaceFolder} and os user home as defaults
                "name": "Up",
                "color": "white",
                "singleInstance": true,
                "command": "composer run up",
            },
            {
                "cwd": "${workspaceFolder}",     // Terminal initial folder ${workspaceFolder} and os user home as defaults
                "name": "Down",
                "color": "white",
                "singleInstance": true,
                "command": "composer run down",
            },
            {
                "cwd": "${workspaceFolder}",     // Terminal initial folder ${workspaceFolder} and os user home as defaults
                "name": "New",
                "color": "white",
                "singleInstance": true,
                "command": "composer run new",
            },
            {
                "cwd": "${workspaceFolder}",     // Terminal initial folder ${workspaceFolder} and os user home as defaults
                "name": "Reset",
                "color": "white",
                "singleInstance": true,
                "command": "composer run reset",
            },
        ]
    }
  }